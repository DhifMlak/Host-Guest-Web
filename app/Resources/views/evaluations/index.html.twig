{% extends 'HostguestBundle::layout.html.twig' %}

{% block content %}
    <h1>Evaluations list</h1>

    <table class="table-bordered">
            <tr>
                <td>  Titre  </td>
                <td>  Facility  </td>
                <td>  Service  </td>
                <td>  Interesting  </td>
                <td>  Human  </td>
                <td>  Note  </td>
                <td>  Commentaire  </td>
                <td>  Actions  </td>
            </tr>
        {% for evaluation in evaluations %}
            <tr>
                <td><a href="{{ path('evaluations_show', { 'id': evaluation.id }) }}">{{ evaluation.titre }}</a></td>
                <td>{{ evaluation.facility }}</td>
                <td>{{ evaluation.service }}</td>
                <td>{{ evaluation.interesting }}</td>
                <td>{{ evaluation.human }}</td>
                <td>{{ evaluation.note }}</td>
                <td>{{ evaluation.commentaire }}</td>
                <td>
                            <a href="{{ path('evaluations_show', { 'id': evaluation.id }) }}">show</a>
                </td>
            </tr>
        {% endfor %}
    </table>

    <br/>
