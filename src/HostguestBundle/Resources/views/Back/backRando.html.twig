{% extends "HostguestBundle:Back:base.html.twig" %}
{% block content %}
    <div id="page-inner">
        <div class="row">
            <div class="col-md-12">
                <h1 class="page-header">
                    Tous les Rondonnées  <small></small>
                </h1>
            </div>
        </div>
        <!-- /. ROW  -->

        <!-- Tab des randonnées En attente -->
        <div class="row">
            <div class="col-md-12">
                <!-- Advanced Tables -->
                <div class="panel panel-default">
                    <div class="panel-heading">
                        Les Rondonnées en attente
                    </div>
                    <div class="panel-body">
                        <div class="table-responsive">

                            <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                                <thead>
                                <tr>
                                    <th>Titre</th>
                                    <th>Lieu</th>

                                    <th>Prix</th>



                                </tr>
                                </thead>
                                <tbody>
                                {% for r in randoNOT %}
                                <tr class="odd gradeX">
                                    <td>{{ r.Titre }} </td>
                                    <td>{{ r.Lieu }}</td>

                                    <td >{{ r.Prix }}</td>


                                    <td class="center"><button class="btn btn-info btn-sm center-block" data-toggle="modal" data-target="#{{ r.id.id }}"> Détail</button></td>
                                    <form action="{{ path('SupprimerAdminRando',{'id': r.id.id}) }}"  method="post">
                                        <td class="center"><button class="btn btn-danger btn-sm center-block"><i class="fa fa-pencil"></i> Supprimer</button></td>
                                    </form>

                                    <form action="{{ path('ApprouveRando',{'id': r.id.id}) }}"  method="post">
                                        <td class="center"><button class="btn btn-success btn-sm center-block"><i class="fa fa-edit "></i> Approuver</button></td>
                                    </form>

                                </tr>
                                <!-- Modale Detail -->
                                <div class="modal fade" id="{{ r.id.id }}" tabindex="-1" role="dialog" aria-labelledby="relationLabel" aria-hidden="true">
                                    <div class="modal-dialog ">
                                        <div class="modal-content">
                                            <div class="modal-header">
                                                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                                                <h4 class="modal-title" id="relationLabel">Détails</h4>
                                            </div>

                                            <div class="modal-body">
                                                <div class="form-group">
                                                    <label for="recipient-name" class="control-label">Titre</label>
                                                    <input type="text" class="form-control" id="titre" name="titre" value="{{ r.Titre }}"disabled >
                                                </div>
                                                <div class="form-group">
                                                    <div class="row">

                                                        <div class="col-md-6">
                                                            <label for="lieu" class="control-label">Lieu de Rondonnée</label>
                                                            <input name="lieu" id="lieu" type="text" class="form-control" value="{{ r.Lieu }}"disabled>
                                                        </div>
                                                        <div class="col-md-6">
                                                            <label for="lieuRencontre" class="control-label">Rendez Vous à</label>
                                                            <input name="lieuRencontre" id="lieuRencontre" class="form-control" type="text" value="{{ r.LieuRencontre }}"disabled>
                                                        </div>
                                                    </div>



                                                </div>

                                                <div class="form-group">
                                                    <div class="row">
                                                        <div class="col-md-6">
                                                            <label for="nbMax" class="control-label">Nombre Max</label>
                                                            <input name="nbMax" id="nbMax" class="form-control" type="number" value="{{ r.Nbmax }}" disabled>
                                                        </div>
                                                        <div class="col-md-6">
                                                            <label for="prix" class="control-label">Prix</label>
                                                            <input name="prix" id="prix" class="form-control" type="number" value="{{ r.Prix }}" disabled>
                                                        </div>
                                                    </div>

                                                </div>

                                                <div class="form-group">
                                                    <label for="description" class="control-label">Description</label>
                                                    <textarea name="description" class="form-control"  id="description" disabled> {{ r.Description }}</textarea>
                                                </div>

                                            </div>
                                            <div class="modal-footer">
                                                <button type="button" class="btn btn-default" onclick='' data-dismiss="modal">Fermer</button>

                                            </div>

                                        </div>
                                    </div>
                                </div>
                                <!-- EndModale detail -->
                                {% endfor %}
                                </tbody>
                            </table>
                        </div>

                    </div>
                </div>
                <!--End Advanced Tables -->
            </div>
        </div>
        <!-- Tab des randonnées Approuvé -->
