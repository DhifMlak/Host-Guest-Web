{% extends "HostguestBundle:Front:Layout.html.twig" %}
{% block  Home_front %}
<div class="product-detail__info">
    <div class="product-title">
    <h1 >Mes Reservations</h1>
    </div>
</div>

    <table class="initiative-table">
        <thead>
            <tr>
                <th class="item-thumb">Id</th>
                <th class="item-thumb">Telephone</th>
                <th class="item-thumb">Nombres de place</th>
                <th class="item-thumb">Type</th>
                <th class="item-thumb">Datedeb</th>
                <th class="item-thumb">Datefin</th>
                <th class="item-thumb">Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for reservation in reservations %}
            <tr>
                <td><a href="{{ path('reservations_show', { 'id': reservation.id }) }}">{{ reservation.id }}</a></td>
                <td>{{ reservation.etat }}</td>
                <td>{{ reservation.nbreservation }}</td>
                <td>{{ reservation.type }}</td>
                <td>{{ reservation.dateDeb|date('Y-d-m') }}</td>
                <td>{{ reservation.dateFin|date('Y-d-m') }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('reservations_show', { 'id': reservation.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('reservations_edit', { 'id': reservation.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
